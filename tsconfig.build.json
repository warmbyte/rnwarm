{
  "compilerOptions": {
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "strict": true,
    "target": "es5",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "declaration": true,
    "strictNullChecks": true,
    "paths": {
      "src/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "__tests__",
    "node_modules"
  ],
}